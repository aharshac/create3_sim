<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:macro name="button" params="name parent_link:=base_link *origin">
  <joint name="${ns_prefix}${name}_joint" type="fixed">
    <parent link="${ns_prefix}${parent_link}"/>
    <child link="${ns_prefix}${name}"/>
    <xacro:insert_block name="origin"/>
  </joint>
  <link name="${ns_prefix}${name}"/>
</xacro:macro>

</robot>
